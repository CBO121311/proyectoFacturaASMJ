<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/invoice_detail_ivUser"
        android:layout_width="57dp"
        android:layout_height="65dp"
        android:src="@drawable/userdetail"
        app:layout_constraintBottom_toTopOf="@+id/invoice_detail_tvFechaEm"
        app:layout_constraintEnd_toStartOf="@+id/invoice_detail_tilCliente"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719"
        app:tint="@color/invoice_detail_c1" />

    <TextView
        android:id="@+id/invoice_detail_tvCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/helvetica"
        android:text="@string/tieCliente"
        android:textAllCaps="false"
        android:textColor="@color/invoice_detail_c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/invoice_detail_tilCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/invoice_detail_tilCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/invoice_detail_c1"
        app:layout_constraintBottom_toTopOf="@+id/invoice_detail_ivCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/invoice_detail_tieCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/invoice_detail_c2"
            android:fontFamily="@font/helvetica"
            android:text="Juan PÃ©rez"
            android:focusable="false"
            android:enabled="false"
            android:cursorVisible="false"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/invoice_detail_tilFechaEm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@color/invoice_detail_c1"
        app:layout_constraintBottom_toTopOf="@+id/invoice_detail_rvArticulos"
        app:layout_constraintEnd_toStartOf="@+id/invoice_detail_tilFechaFin"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoice_detail_tilCliente"
        app:layout_constraintVertical_bias="0.984">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/invoice_detail_tieFechaEm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/invoice_detail_c2"
            android:fontFamily="@font/helvetica"
            android:focusable="false"
            android:enabled="false"
            android:cursorVisible="false"
            android:text="1/1/2003"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/invoice_detail_tilFechaFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/invoice_detail_c1"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusable="false"
        android:enabled="false"
        android:cursorVisible="false"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="@+id/invoice_detail_tvArticulos"
        app:layout_constraintTop_toBottomOf="@+id/invoice_detail_tvFechaFin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/invoice_detail_tieFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/invoice_detail_c2"
            android:fontFamily="@font/helvetica"
            android:text="10/12/2023"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/invoice_detail_tvFechaEm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/helvetica"
        android:text="@string/tieFechaEm"
        android:textColor="@color/invoice_detail_c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/invoice_detail_tvFechaFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica"
        android:text="@string/tieFechaFin"
        android:textColor="@color/invoice_detail_c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toEndOf="@+id/invoice_detail_tvFechaEm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/invoice_detail_rvArticulos"
        android:layout_width="350dp"
        android:layout_height="330dp"
        android:background="@color/invoice_detail_c2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoice_detail_tilFechaFin" />

    <TextView
        android:id="@+id/invoice_detail_tvArticulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/helvetica"
        android:text="@string/tieArticulosFactura"
        android:textColor="@color/invoice_detail_c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/invoice_detail_rvArticulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoice_detail_tilFechaFin"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/invoice_detail_tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica"
        android:text="@string/tvTotal"
        android:textColor="@color/invoice_detail_c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoice_detail_rvArticulos"
        app:layout_constraintVertical_bias="0.794" />

    <TextView
        android:id="@+id/invoice_detail_tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica"
        android:textColor="@color/invoice_detail_c"
        android:textSize="20sp"
        android:textStyle="bold"
        android:focusable="false"
        android:enabled="false"
        android:cursorVisible="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toEndOf="@+id/invoice_detail_tvPrecio"
        app:layout_constraintTop_toBottomOf="@+id/invoice_detail_rvArticulos"
        app:layout_constraintVertical_bias="0.794"
        tools:text="0.00" />

    <ImageView
        android:id="@+id/invoice_detail_ivCalendar"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/calendar"
        app:tint="@color/invoice_detail_c1"
        app:layout_constraintBottom_toTopOf="@+id/invoice_detail_tvArticulos"
        app:layout_constraintEnd_toStartOf="@+id/invoice_detail_tilFechaFin"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/invoice_detail_tilFechaEm" />

</androidx.constraintlayout.widget.ConstraintLayout>