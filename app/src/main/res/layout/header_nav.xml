<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#9F8AEA">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/acc_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/kiwituxedo"
        app:civ_border_color="@color/seed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/acc_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/txtName_drawer"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/acc_avatar"
        app:layout_constraintStart_toStartOf="@+id/acc_avatar"
        app:layout_constraintTop_toBottomOf="@+id/acc_avatar" />

    <TextView
        android:id="@+id/acc_txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/txtEmail_drawer"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/acc_txtName"
        app:layout_constraintStart_toStartOf="@+id/acc_txtName"
        app:layout_constraintTop_toBottomOf="@+id/acc_txtName" />
</androidx.constraintlayout.widget.ConstraintLayout>